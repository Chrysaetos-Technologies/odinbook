- user    = User.find(@receiver_id)
- friends = user.friends
- provide(:title, user.name)

%ul.users-container
  %li.friends-header
    %h2
      = "#{user.first_name}'s friends"
      %span= "#{friends.count}"

  = render friends, is_index: true

  - if friends.empty?
    %li.empty-list= no_friend_profile_message(user)
